<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <ImageView
        android:id="@+id/img_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#c8c8c8"
        android:scaleType="fitXY"
        android:src="@drawable/main_picture" />

    <RelativeLayout
        android:id="@+id/relLayout2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/post_image"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/heartLayout"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/image_heart_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_heart_red"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/image_heart"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_heart_white"
                android:visibility="visible" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/speech_bubble"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/heartLayout"
            android:src="@drawable/ic_speech_bubble"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLayout4"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_below="@+id/relLayout2"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:padding="12dp">

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강남 인증 맛집"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/place_name"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/txt_detail_theme1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#가성비"
                android:textColor="@color/colorTheme" />

            <TextView
                android:id="@+id/txt_detail_theme2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="#감성"
                android:textColor="@color/colorTheme" />

            <TextView
                android:id="@+id/txt_detail_theme3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:text="#분위기"
                android:textColor="@color/colorTheme" />


        </LinearLayout>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/place_name"
            android:layout_centerVertical="true"
            android:text="주소"
            android:textColor="@color/grey"
            android:textSize="18sp" />

        <TableLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_marginTop="0dp"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:gravity="right"
                    android:text="★"
                    android:textColor="#ffc800"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별점 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="점 "
                    android:textSize="15dp" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffdada">

    </FrameLayout>

</LinearLayout>